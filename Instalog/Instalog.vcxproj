    <Sha2SignServer>/tr http://timestamp.geotrust.com/</Sha2SignServer>
  </PropertyGroup>
  <Target Name="AfterBuild">
    <Message Importance="High" Text="Signing $(TargetDir)Instalog.exe" />
    <Exec Command="&quot;C:\Program Files (x86)\Windows Kits\8.1\bin\x86\signtool.exe&quot; sign /sha1 8f52fa9db30525dfabb35b08bd1966693a30eccf /d &quot;Instalog Diagnostics and Logging Tool&quot; $(Sha1SignServer)  &quot;$(TargetDir)Instalog.exe&quot;" ContinueOnError="true" />
    <Exec Command="&quot;C:\Program Files (x86)\Windows Kits\8.1\bin\x86\signtool.exe&quot; sign /sha1 8b0026ecbe5bf245993b26e164f02e1313579e47 /d &quot;Instalog Diagnostics and Logging Tool&quot; /as /fd sha256 $(Sha2SignServer) &quot;$(TargetDir)Instalog.exe&quot;" ContinueOnError="true" />
  </Target>
  <Target Name="ReleaseBuild" Condition="'$(Configuration)'!='Debug'" AfterTargets="AfterBuild">
    <MakeDir Directories="$(MSBuildThisFileDirectory)..\Drop" />
    <Message Importance="High" Text="Dropping to $([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)..\Drop\$(DropFileName).exe'))" />
    <Copy SourceFiles="$(TargetDir)Instalog.exe" DestinationFiles="$([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)..\Drop\$(DropFileName).exe'))" />
    <Copy SourceFiles="$(TargetDir)Instalog.pdb" DestinationFiles="$(MSBuildThisFileDirectory)..\Drop\$(DropFileName).pdb" />
  </Target>
</Project>